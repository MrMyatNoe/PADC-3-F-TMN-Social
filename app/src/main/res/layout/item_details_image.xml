<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/brown">

        <ImageView
            android:background="@drawable/movie_background"
            android:id="@+id/img_movie_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp" />

        <ImageView
            android:background="@drawable/ic_play_circle_outline_black_24dp"
            android:id="@+id/img_movie_detail_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_official_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="office trailer"
            android:textColor="@color/icons"
            android:layout_gravity="right"/>
    </FrameLayout>
</android.support.v7.widget.CardView>
