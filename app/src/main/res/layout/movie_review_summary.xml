<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/brown">

        <TextView
            android:id="@+id/tv_movie_review_summary_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/tv_review_summary_writer"
            android:textSize="14sp"
            android:textColor="@color/whiteFull"/>

        <TextView
            android:id="@+id/tv_movie_review_summary_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_review_summary_writer"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/tv_review_summary_brief"
            android:textSize="14sp"
            android:textColor="@color/whiteFull" />

        <TextView
            android:id="@+id/tv_movie_review_summary_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_review_summary_brief"
            android:layout_marginTop="32dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/tv_review_summary_comment"
            android:textSize="14sp"
            android:textColor="@color/whiteFull"/>

        <TextView
            android:id="@+id/tv_movie_review_summary_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_review_summary_comment"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/tv_review_summary_rating"
            android:textSize="14sp"
            android:textColor="@color/whiteFull"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
