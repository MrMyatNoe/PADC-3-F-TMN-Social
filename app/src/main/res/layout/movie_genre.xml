<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/brown">

        <TextView
            android:id="@+id/tv_movie_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="Drama"
            android:textColor="#000"
            android:textSize="14sp"
            android:background="@drawable/btn_round_corners_radius_8dp"/>

        <TextView
            android:id="@+id/tv_movie_genre_stick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/tv_movie_genre"
            android:text=" | "
            android:textColor="#000" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
